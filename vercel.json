{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/send-message", "dest": "/api/send-message" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}